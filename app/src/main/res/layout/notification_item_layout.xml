<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp">


    <TextView
        android:id="@+id/notification_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/withdrawal_failed"
        android:textColor="@color/failedColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificatiom_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nunito_sans"
        android:text="@string/_10_32pm"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/notification_type_txt"
        app:layout_constraintStart_toEndOf="@+id/notification_type_txt"
        app:layout_constraintTop_toTopOf="@+id/notification_type_txt" />

    <ImageView
        android:id="@+id/notication_type_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notification_failed" />

    <TextView
        android:id="@+id/notification_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Your withdrawal of KSH 500 failed due to insufficient funds Available in your wallet"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_type_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>